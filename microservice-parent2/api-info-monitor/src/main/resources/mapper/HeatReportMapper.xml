<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.miduchina.wrd.api.mapper.heatanalysis.HeatReportMapper">

    <select id="selectCountHeatReportByUserId" resultType="java.lang.Integer">
        <![CDATA[
			SELECT
			    count(*)
			FROM
				heat_report
			where status = 1
			]]>
        <if test="userId!=null and userId!=0">
            <![CDATA[
				and user_id = #{userId}
			]]>
        </if>
    </select>

</mapper>