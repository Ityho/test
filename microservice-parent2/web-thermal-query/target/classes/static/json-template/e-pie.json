{
	tooltip : {
	        trigger: 'item',
	        formatter: "{a} <br/>{b} : {c} ({d}%)"
	},
    calculable : false,
    color:['#cd5c5c','#ba55d3','#ff69b4','#6495ed','#32cd32','#87cefa','#ff7f50'],
   legend:{
    	   orient : 'vertical',
           x : 'left',
           data:{legend}
    },
    series : [
        {
            type:'pie',
            radius : ['35%','70%'],
            startAngle:0,
            minAngle:10,
            itemStyle : {
                normal : {
                    label : {
                        show : true,
                        textStyle:{
                        	fontSize:'14',
                        	fontWeight:'bold'
                        }
                    },
                    labelLine : {
                        show : true
                    }
                },
                emphasis : {
                    label : {
                        show : true,
                        position : 'center',
                        textStyle : {
                            fontSize : '30',
                            fontWeight : 'bold'
                        }
                    }
                }
            },
		 data:{data},
	     itemStyle:{
                normal:{
	              label:{
	                show: true,
	                formatter: '{b} : {c} ({d}%)'
	              },
	              labelLine :{show:true}
	   	         }
       		 }        
		}
	]
}